<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaGUI.Views"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="400"
        Width="450" Height="400"
        x:Class="AvaloniaGUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia x Vulkan">
  
  <Grid RowDefinitions="Auto,*">
    <StackPanel Orientation="Horizontal" Grid.Row="0">
      <Button Name="TheButton" Content="Attach VkSurface" Command=""/>
      <StackPanel Name="WidgetPanel" Orientation="Horizontal"/>
    </StackPanel>
    <Border BorderBrush="Tomato" BorderThickness="1" Grid.Row="1">
      <ContentControl x:Name="VulkanCanvas" Background="Green"/>
    </Border>


  </Grid>
</Window>
